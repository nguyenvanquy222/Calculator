<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/blue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Karuida KK-8827A"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|right"
                    android:text="8 digit"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:background="@color/grey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/edittext"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="50sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/grey"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="OFF"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12sp" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="MRC"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="12sp" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="M-"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="M+"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:text="M-"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:visibility="invisible" />

                        </TableRow>

                        <TableRow
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="%"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="N"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="MC"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textAlignment="center"
                                android:text="MR"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                            <Button
                                android:id="@+id/opDivide"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:text="/"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <Button
                                android:id="@+id/btn_congtru"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:text="+/-"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/num7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/white"
                                android:onClick="btnNumberEvent"
                                android:text="7"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/num8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/white"
                                android:onClick="btnNumberEvent"
                                android:text="8"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/num9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/white"
                                android:onClick="btnNumberEvent"
                                android:text="9"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/opMultiply"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:onClick="btnOperationEvent"
                                android:text="x"
                                android:textColor="@color/white"
                                android:textSize="30sp" />

                        </TableRow>

                        <TableRow
                            android:layout_weight="1"
                            android:gravity="center_horizontal">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:text="M"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <Button
                                android:id="@+id/num4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/white"
                                android:onClick="btnNumberEvent"
                                android:text="4"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/num5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/white"
                                android:onClick="btnNumberEvent"
                                android:text="5"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/num6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/white"
                                android:onClick="btnNumberEvent"
                                android:text="6"
                                android:textColor="@color/black"
                                android:textSize="30sp" />

                            <Button
                                android:id="@+id/opMinus"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:backgroundTint="@color/btn"
                                android:onClick="btnOperationEvent"
                                android:text="-"
                                android:textColor="@color/white"
                                android:textSize="30sp" />
                        </TableRow>

                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:stretchColumns="*">

                            <TableRow
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <Button
                                    android:id="@+id/CE"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:backgroundTint="@color/orange"
                                    android:onClick="btnCE"
                                    android:text="CE"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />

                                <Button
                                    android:id="@+id/num3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:backgroundTint="@color/white"
                                    android:onClick="btnNumberEvent"
                                    android:text="3"
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />

                                <Button
                                    android:id="@+id/num2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:backgroundTint="@color/white"
                                    android:onClick="btnNumberEvent"
                                    android:text="2"
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />

                                <Button
                                    android:id="@+id/num1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="8dp"
                                    android:backgroundTint="@color/white"
                                    android:onClick="btnNumberEvent"
                                    android:text="1"
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />

                            </TableRow>

                            <TableRow
                                android:layout_weight="1"
                                android:gravity="center_vertical">

                                <Button
                                    android:id="@+id/ON"
                                    android:layout_width="0dp"
                                    android:layout_height="80dp"
                                    android:backgroundTint="@color/orange"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:text="ON/C"
                                    android:textSize="18sp"
                                    android:textColor="@color/black" />

                                <Button
                                    android:id="@+id/num0"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:backgroundTint="@color/white"
                                    android:onClick="btnNumberEvent"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />

                                <Button
                                    android:id="@+id/dot"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:backgroundTint="@color/white"
                                    android:text="."
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />

                                <Button
                                    android:id="@+id/equal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="8dp"
                                    android:backgroundTint="@color/white"
                                    android:onClick="btnEqualEvent"
                                    android:text="="
                                    android:textColor="@color/black"
                                    android:textSize="30sp" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/grey">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="10dp"
                            android:stretchColumns="*">

                            <TableRow
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <Button
                                    android:id="@+id/opPlus"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="4dp"
                                    android:backgroundTint="@color/btn"
                                    android:onClick="btnOperationEvent"
                                    android:text="+"
                                    android:textColor="@color/white"
                                    android:textSize="30sp" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>